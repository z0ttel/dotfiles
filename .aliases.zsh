#!/usr/bin/env zsh

# Just some nice improvments
alias ls="ls --color=auto -F"
alias ll="ls --color=auto -F -l -h"
alias la="ls -a -l -h --color=auto -F"

# Verbose = good
alias mv="mv -v"
alias cp="cp -v"
alias mkdir="mkdir -v"
alias rm="rm -v"

# Just a short cut
alias py="python3"

# Bat is a modern version of cat
# See https://github.com/sharkdp/bat
alias cat="bat"